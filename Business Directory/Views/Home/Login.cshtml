@model Business_Directory.Models.User
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="card col-md-6 col-sm-12 mr-auto">
    <div class="card-body">
        <form id="LoginForm" method="POST" action="/Home/Login">
            <div class="form-group">
                <label for="userNameLogin">UserName</label>
                <input type="text" class="form-control" id="userNameLogin" placeholder="Enter UserName" />
            </div>
            <div class="form-group">
                <label for="passwordLogin">Password</label>
                <input type="password" class="form-control" id="passwordLogin" placeholder="Enter Password" />
            </div>
            <button class="btn btn-primary" id="LoginBtn">Login</button>
        </form>
    </div>
</div>