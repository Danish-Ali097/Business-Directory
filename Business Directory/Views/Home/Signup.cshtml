@model Business_Directory.Models.User
@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>

<div class="card col-md-6 col-sm-12 mr-auto">
    <div class="card-body">
        @using (Html.BeginForm("Signup", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @for = "username" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "username", @required = "true" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @for = "password" })
                @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @id = "password", @required = "true" })
            </div>
            <button class="btn btn-primary">SignUp</button>
        }

        @if (ViewBag.error != null)
        {
            <p class="text-danger">
                @ViewBag.error
            </p>
        }
    </div>
</div>
